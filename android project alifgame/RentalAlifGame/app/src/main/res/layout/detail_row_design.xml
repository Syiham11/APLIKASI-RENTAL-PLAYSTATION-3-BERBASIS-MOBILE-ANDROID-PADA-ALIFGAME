<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:paddingBottom="5dp">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/m_nz_material_grey_200"/>

    <TextView
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="23 Jam"
        android:textColor="@color/m_nz_material_grey_800"
        android:id="@+id/row_nama_kategori"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 60.000"
        android:id="@+id/row_harga_kategori"
        android:textColor="@color/m_nz_material_merah_600"/>


</LinearLayout>